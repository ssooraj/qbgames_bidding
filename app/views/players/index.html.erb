  </div>
  <div id="tabs-2">
    <ul class="cd-items cd-container">
      <%= render :partial => '/players/guys' %>
    </ul> <!-- cd-items -->
  </div>
  <div id="tabs-3">
    <ul class="cd-items cd-container">
      <%= render :partial => '/players/galz' %>
    </ul> <!-- cd-items -->
  </div>
  <div id="tabs-4">
    <ul class="cd-items cd-container">
