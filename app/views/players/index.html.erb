<div class="cd-quick-view">
  <div class="cd-slider-wrapper">
    <ul class="cd-slider">
      <li class="selected"><img src="" alt="Product 1"></li>
    </ul> <!-- cd-slider -->
  </div> <!-- cd-slider-wrapper -->

  <div class="cd-item-info">
    <h2></h2>
    <p id="sex"> </p>
    <p id="team"></p>
    <p id="base-price"> </p>
    <p id="sold-price"></p>
    <p id="status" class=""></p>
    <p id="player_id" style="display: none;"> </p>
    <img src="/assets/blank.png" id="cricket" >
    <img src="/assets/blank.png" id="football" >
    <img src="/assets/blank.png" id="badminton" >
    <img src="/assets/blank.png" id="stars" >


    </p> <!-- cd-item-info -->
    <a href="#0" class="cd-close">Close</a>
  </div> <!-- cd-quick-view -->
</div>
<script type="text/javascript">
    $(document).on('ready',function(event) {
        setInterval(function () {
            $.ajax({
                url: '/players/update_sold',
                crossDomain: true,
                data: {id: 'no'},
                async: false,
                success: function (response) {
                    var x = $('.ui-tabs-nav').find('[aria-selected= true]');
                    var division = x.children('a').attr('href');
                    console.log(division);
                    if(division == '#tabs-5'){
                        $("body").trigger("click");
                    }
                    $("#tabs-5 .cd-container").html(response.html);
                },
                error: function (xhr, status, errorThrown) {
                    console.log(errorThrown);
                }
            });
        }, 30000);

    });
</script>
