<header>
  <h1 class="main-heading">QB Auction 2015</h1>
</header>

<ul class="cd-items cd-container">
  <% @list.each do |player| %>
  <li class="cd-item" style="background:url(<%=player.avatar.url %> );background-size:cover;background-position: center;">

           <img src=<%=player.avatar.url %>   name= <%= player.id %> alt="Item Preview" style="display:none;">  
          <div class="games">
          <% if player.is_cricket %> <img class="cric-img" src="/assets/Cricket.png" id="cricket" > <%end%>
          <% if player.is_football %> <img class="foot-img" src="/assets/Soccer.png" id="football" > <%end%>
          <% if player.is_badminton %><img class="bad-img" src="/assets/Badminton.png" id="badminton" > <%end%>
        </div>
    <div class="content"> 

    </div>
    <a href="#0" class="cd-trigger">
      <%= player.display_name%>
    </a>
  </li> <!-- cd-item -->
  <% end %>

</ul> <!-- cd-items -->

<div class="cd-quick-view">
  <div class="cd-slider-wrapper">
    <ul class="cd-slider">
      <li class="selected"><img src="" alt="Product 1"></li>
    </ul> <!-- cd-slider -->
  </div> <!-- cd-slider-wrapper -->

  <div class="cd-item-info">
    <h2></h2>
    <p id="team"></p>
    <p id="base-price"> </p>
    <p id="sold-price"></p>
    <p id="status" class=""></p>
    <img src="" id="cricket" >
    <img src="" id="football" >
    <img src="" id="badminton" >

  </div> <!-- cd-item-info -->
  <a href="#0" class="cd-close">Close</a>
</div> <!-- cd-quick-view -->
